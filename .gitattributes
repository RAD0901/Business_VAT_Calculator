# Auto detect text files and perform LF normalization
* text=auto

# Excel files
*.xlsx binary
*.xls binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg text
*.ico binary

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Config files
*.toml text eol=lf
*.conf text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
docs/ export-ignore
*.md export-ignore
CONTRIBUTING.md export-ignore
SECURITY.md export-ignore

# Language statistics (mark vendor files as vendored)
assets/js/vendor/* linguist-vendored
node_modules/* linguist-vendored
